{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@typechain/*": ["typechain/*"]
    }
  },
  "include": ["./scripts", "tests", "./typechain"],
  "exclude": ["node_modules"],
  "files": ["hardhat.config.ts"]
}
